.min-h-screen.flex.items-center.justify-center.bg-gray-100
  .bg-white.p-8.rounded.shadow-md.max-w-md.w-full
    %h2.text-2xl.font-semibold.mb-6 Sign Up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = email_input f, :email
      = password_input f, :password
      = password_input f, :password_confirmation, placeholder: "Confirm password"
      = submit_button f, "Sign up" do
        %a.text-sm.text-gray-600{:href => "#"} Already have an account?
