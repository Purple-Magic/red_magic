.flex.justify-between.mb-4.mt-4
  %h1{ class: "text-4xl font-bold text-left text-black-700 mb-8 mt-4" }
    Podcasts
  .text-right.mt-4
    = link_to 'New Podcast', new_podcast_path, class: " bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
= turbo_stream_from "podcasts"
%table.w-full.bg-white.border.border-gray-200
  %thead
    %tr
      %th.py-2.px-4.border-b.border-r Logo
      %th.py-2.px-4.border-b.border-r Podcast Title
      %th.py-2.px-4.border-b.border-r Actions
  %tbody#podcasts
    = render @podcasts
