= turbo_frame_tag "podcast" do
  .flex.justify-between.mb-4.mt-4
    %h1.text-2xl.font-bold
      = @podcast.title
    .text-right.mt-4
      = link_to 'Edit', edit_podcast_path(@podcast), class: "btn btn-delete bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded"
      = link_to 'Destroy', @podcast, class: "btn btn-delete bg-orange-500 hover:bg-orange-700 text-white font-bold py-3 px-4 rounded", method: :delete, data: { confirm: 'Are sure?' }
      = link_to 'Back', podcasts_path, class: "btn btn-delete bg-gray-500 hover:bg-gray-700 text-white font-bold py-3 px-4 rounded"
  %table.min-w-full.bg-white.border.border-gray-200
    %tbody
      - @podcast.attributes.each do |(key, value)|
        %tr
          %td.px-4.py-2.border-b
            = Podcast.human_attribute_name(key)
          %td.px-4.py-2.border-b
            = value
